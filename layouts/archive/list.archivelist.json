{{- $list := slice -}}
{{- range $k, $it := .Site.Data.archive.items -}}
  {{- if not $it.draft -}}
    {{- $links := cond (isset $it "links") (sort $it.links "sort_order" "asc") (slice) -}}
    {{- $tags  := cond (isset $it "tags")  $it.tags (slice) -}}
    {{- $list = $list | append (dict
      "id"        $it.id
      "slug"      $it.slug
      "kind"      $it.kind
      "date"      $it.date
      "title"     $it.title
      "overline"  $it.overline
      "desc"      $it.desc
      "thumb"     $it.thumb
      "tags"      $tags
      "links"     $links
    ) -}}
  {{- end -}}
{{- end -}}
{{- $sorted := sort $list "date" "desc" -}}
{{- $sorted | jsonify -}}

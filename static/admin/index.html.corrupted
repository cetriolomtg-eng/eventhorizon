  <!-- Include the script that builds the page and powers Decap CMS -->
  <script src="https://unpkg.com/decap-cms@^3.0.0/dist/decap-cms.js"></script>
  
  <!-- Advanced debugging tool for studying Decap CMS internals -->
  <script src="./js/debug-tool.js"></script>
  
  <script>
    console.log('üîç Decap CMS - diagnosi problema token');
    
    // NON rimuovere il token se esiste - lasciamo che Decap CMS lo usi
    const existingUser = localStorage.getItem('netlify-cms-user');
    if (existingUser) {
      console.log('üë§ Token esistente trovato:', JSON.parse(existingUser));
    }
    
    // Intercetta tutte le chiamate fetch per vedere cosa fa Decap CMS
    const originalFetch = window.fetch;
    window.fetch = function(...args) {
      const url = args[0];
      const options = args[1] || {};
      
      console.log('üåê Fetch call:', url, options.method || 'GET');
      if (options.headers) {
        console.log('üìã Headers:', options.headers);
      }
      
      return originalFetch.apply(this, args)
        .then(response => {
          console.log('‚úÖ Response:', url, response.status);
          return response;
        })
        .catch(error => {
          console.error('‚ùå Fetch error:', url, error);
          throw error;
        });
    };
    
    // Gestione OAuth semplificata
    window.addEventListener('message', (event) => {
      if (event.origin === 'https://eventhorizon-oauth.cetriolo-mtg.workers.dev') {
        if (typeof event.data === 'string' && event.data.startsWith('authorization:github:success:')) {
          const token = event.data.slice('authorization:github:success:'.length);
          console.log('‚úÖ Token ricevuto:', token);
          
          // Salva nel formato ESATTO che Decap CMS si aspetta
          localStorage.setItem('netlify-cms-user', JSON.stringify({
            token: token,
            login: 'eventhorizon-mtg', // Username GitHub corretto
            name: 'Event Horizon MTG',
            avatar_url: 'https://github.com/eventhorizon-mtg.png',
            backendName: 'github'
          }));
          
          // Ricarica senza timeout per evitare conflitti
          window.location.reload();
        }
      }
    });
    
    // Debug di Decap CMS dopo il caricamento - con retry logic
    window.addEventListener('load', () => {
      
      function checkCMSStatus(attempt = 1, maxAttempts = 10) {
        console.log(`üîç Check CMS Status - Tentativo ${attempt}/${maxAttempts}`);
        
        setTimeout(() => {
        console.log('üîç Stato Decap CMS:');
        console.log('- window.CMS:', !!window.CMS);
        
        const storedUser = localStorage.getItem('netlify-cms-user');
        console.log('- localStorage token:', !!storedUser);
        if (storedUser) {
          console.log('- Token details:', JSON.parse(storedUser));
        }
        
        if (window.CMS) {
          try {
            const config = window.CMS.getConfig ? window.CMS.getConfig() : null;
            console.log('- CMS config:', config || 'N/A');
            
            if (!config) {
              console.log('üîç Tentativo caricamento config manuale...');
              fetch('./config.yml')
                .then(response => {
                  console.log('üìÑ Config.yml fetch response:', response.status, response.statusText);
                  return response.text();
                })
                .then(yamlText => {
                  console.log('üìù Config.yml content length:', yamlText.length);
                  console.log('üìù Config.yml primi 200 chars:', yamlText.substring(0, 200));
                })
                .catch(error => {
                  console.error('‚ùå Errore caricamento config.yml:', error);
                });
            }
          } catch (e) {
            console.error('‚ùå Errore getConfig:', e);
          }
        }
        
        // Controlla se ci sono errori visibili nell'interfaccia
        const errorElements = document.querySelectorAll('[class*="error"], [class*="Error"]');
        if (errorElements.length > 0) {
          console.log('‚ùå Errori UI trovati:', errorElements.length);
          errorElements.forEach((el, i) => {
            console.log(`Error ${i}:`, el.textContent);
          });
        }
        
        // Controlla se c'√® il pulsante di login (significa che non √® autenticato)
        const loginButtons = document.querySelectorAll('button, a');
        let hasLoginButton = false;
        loginButtons.forEach(btn => {
          if (btn.textContent && btn.textContent.toLowerCase().includes('login')) {
            hasLoginButton = true;
          }
        });
        
        if (hasLoginButton) {
          console.log('üîê Pulsante login ancora presente - autenticazione fallita');
        } else {
          console.log('‚úÖ Nessun pulsante login - potrebbe essere autenticato');
        }
        
        // Non forzare config inline - lascia che usi solo config.yml
        console.log('ÔøΩ Lasciando che Decap CMS usi solo config.yml per evitare conflitti');
        
      }, 3000);
    });
